---
import Mail from '@icons/Mail.astro'
import Phone from '@icons/Phone.astro'
import Location from '@icons/Location.astro'


// src/components/ContactFormFull.astro
const handleSubmit = (e) => {
  e.preventDefault();
  // Form submission logic would go here
  alert('Mensaje enviado con éxito');
};
---
<section class="relative bg-gradient-to-br from-[#f0fdf4] to-[#ecfdf5] w-full h-full  align-middle flex items-center justify-center bg-cover bg-center">

<div class="py-40 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-extrabold text-[#007B7B] sm:text-4xl">
        Envíanos un Mensaje
      </h2>
      <p class="mt-4 text-lg leading-6 text-gray-600">
        Completa el formulario y nos pondremos en contacto contigo lo antes posible.
      </p>
    </div>

    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
        <!-- Contact Information -->
        <div class="bg-[#007B7B] p-8 text-white">
          <h3 class="text-2xl font-bold mb-6">Información de Contacto</h3>
          
          <div class="space-y-6">
            <div class="flex  gap-x-5 items-start">
              <Mail color="#4CAF50"/>
              <div>
                <h4 class="font-semibold">Correo Electrónico</h4>
                <p class="text-[#c4e3e3]">Protalent00@gmail.com</p>
              </div>
            </div>
            
            <div class="flex  gap-x-5 items-start">
              <Phone color="#4CAF50"/>
              <div>
                <h4 class="font-semibold">Teléfono</h4>
                <p class="text-[#c4e3e3]">442-374-7483</p>
              </div>
            </div>
            
            <div class="flex  gap-x-5 items-start">
              <Location color="#4CAF50"/>
              <div>
                <h4 class="font-semibold">Horario de Atención</h4>
                <p class="text-[#c4e3e3]">Lunes a Viernes: 8am - 6pm</p>
                <p class="text-[#c4e3e3]">Sábados: 9am - 1pm</p>
              </div>
            </div>
          </div>    
      </div>

        <!-- Form Section -->
        <div class="p-8">
          <form class="space-y-6" on:submit={handleSubmit}>
            <div>
              <label for="full-name" class="block text-sm font-medium text-gray-700 mb-1">Nombre Completo</label>
              <input
                type="text"
                id="full-name"
                name="full-name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#4CAF50] focus:border-transparent"
                placeholder="Ingresa tu nombre completo"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo Electrónico</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#4CAF50] focus:border-transparent"
                placeholder="Ingresa tu correo electrónico"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Teléfono (Opcional)</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#4CAF50] focus:border-transparent"
                placeholder="Ingresa tu número telefónico"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Tu Mensaje</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#4CAF50] focus:border-transparent"
                placeholder="Escribe tu mensaje aquí..."
              ></textarea>
            </div>

            <div>
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-[#007B7B] to-[#4CAF50] text-white py-3 px-6 rounded-md hover:from-[#006666] hover:to-[#3d8b40] transition-all duration-300 shadow-md hover:shadow-lg font-medium text-lg"
              >
                Enviar Mensaje
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Smooth transitions for form elements */
  input, textarea, button {
    transition: all 0.3s ease;
  }
  
  /* Custom scrollbar for textarea */
  textarea {
    scrollbar-width: thin;
    scrollbar-color: #4CAF50 #f0f0f0;
  }
  
  textarea::-webkit-scrollbar {
    width: 8px;
  }
  
  textarea::-webkit-scrollbar-track {
    background: #f0f0f0;
    border-radius: 4px;
  }
  
  textarea::-webkit-scrollbar-thumb {
    background-color: #4CAF50;
    border-radius: 4px;
  }
</style>

</section>