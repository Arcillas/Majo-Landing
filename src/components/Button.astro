---
// src/components/Button.astro
const { 
  text = "Button", 
  variant = "primary", 
  class: className = "",
  href = "#",
  onClick = null
} = Astro.props;

const baseClasses = "inline-flex items-center px-6 py-3 rounded-lg font-medium transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2";

const variantClasses = {
  primary: "bg-[#007B7B] text-white hover:bg-[#006666] focus:ring-[#007B7B] shadow-md hover:shadow-lg",
  secondary: "bg-[#4CAF50] text-white hover:bg-[#3d8b40] focus:ring-[#4CAF50] shadow-md hover:shadow-lg",
  outline: "border-2 border-[#007B7B] text-[#007B7B] hover:bg-[#007B7B]/10 focus:ring-[#007B7B]",
  ghost: "text-[#007B7B] hover:bg-[#007B7B]/10 focus:ring-[#007B7B]"
};
---

<a
  href={href}
  class={`${baseClasses} ${variantClasses[variant]} ${className}`}
  on:click={onClick}
  aria-label={text}
>
  <slot>{text}</slot>
</a>

<style>
  .focus\:ring-2 {
    --tw-ring-offset-width: 2px;
  }
</style>