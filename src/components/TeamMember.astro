---
interface TeamMember {
  name: string;
  role: string;
  description: string;
  batches?: string[];
}

const { name, role, icon, description, batches = [] } = Astro.props;
---

<div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <div class="p-6">
    <div class="flex items-start space-x-4">
      <div class="flex-shrink-0 bg-teal-100 p-3 rounded-full">
        {icon}
      </div>
      <div>
        <h3 class="text-xl font-bold text-gray-900">{name}</h3>
        <p class="text-teal-600 font-medium">{role}</p>
      </div>
    </div>
    <p class="mt-4 text-gray-600">{description}</p>
    
    <div class="mt-6 pt-4 border-t border-gray-100">
      <div class="flex space-x-2">
        {
          batches.map(batch => (
            <span class="px-3 py-1 bg-teal-100 text-teal-800 text-sm rounded-full">{batch}</span>
          ))
        }

        <!-- <span class="px-3 py-1 bg-teal-100 text-teal-800 text-sm rounded-full">ISO 14001</span>
        <span class="px-3 py-1 bg-amber-100 text-amber-800 text-sm rounded-full">Econom√≠a Circular</span> -->
      </div>
    </div>
  </div>
</div>